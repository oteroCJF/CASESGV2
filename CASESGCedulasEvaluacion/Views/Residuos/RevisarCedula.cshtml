                                                        icon: "info",
                                                        allowOutsideClick: false,
                                                        'title': 'Servicio de RPBI',
                                                        html: "Rechazando la cédula, por favor espere."
                                                    });
                                                    Swal.showLoading();
                                                    axios.get('/cedula/notificacionCedula/' + model.id).then(notificacion => {
                                                        if (notificacion.status == 200) {
                                                            Swal.hideLoading();
                                                            Swal.fire({
                                                                icon: "success",
