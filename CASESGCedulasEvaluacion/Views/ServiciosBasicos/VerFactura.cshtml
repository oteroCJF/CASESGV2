@model CedulasEvaluacion.Entities.MServiciosB.ServicioBasico;

@{
    ViewData["title"] = "Factura del servicio de "+Model.servicio.Nombre+ " del Mes de "+Model.Mes;
}

<div class="container-fluid" id="obligacion">
    <div class="row">
        <div class="col-lg-12">
            <a href="#" type='button' class="btn btn-sm btn-warning float-right btnBack"
               data-toggle="tooltip" title="Regresar al Listado de Facturas de Model.servicio.Nombre" data-placement="top"><i class="fal fa-arrow-left"></i></a>
        </div>
    </div>
    <div class="card mt-2">
        <div class="card-header bg-joke text-white">
            <h5 class="mt-2">Datos de Facturación</h5>
        </div>
        <div class="card-body">
            <div class="row col-lg-12">
                <table class="table">
                    <tr>
                        <td><strong>Año: </strong>@Model.Anio</td>
                        <td><strong>Mes: </strong>@Model.Mes</td>
                    </tr>
                    <tr>
                    </tr>
                </table>
            </div>
        </div>
    </div>
    <div class="row col-lg-12">
        @if (!@Model.NombrePDF.Equals(null) && !@Model.NombrePDF.Equals(""))
        {
            <object class="mb-4" width="100%" height="450px" data="/view/servicioBasico/@Model.servicio.Nombre/@Model.Mes/@Model.NombrePDF"></object>
        }
        else
        {
            <div class="col-lg-12 text-center">
                <p class="font-weight-bold text-primary">Aún no se realiza la carga de la obligación correspondiente</p>
            </div>
        }
    </div>
</div>

@section Scripts { 
    <script>
        $(function () {
            var model = @Html.Raw(Json.Serialize(@Model));

            $(".btnBack").click(function () {
                window.location.href = "/basicos/servicio/" + model.servicio.id + window.location.search;
            });
        });
    </script>
}