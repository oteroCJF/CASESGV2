                                            {
                                                @if (pr.Cierre)
                                                {
                                                    <p class="h3 text-justify text-success ml-2">La fecha de cierre fue el @Convert.ToDateTime(res.Detalles).ToString("dd/MM/yyyy")</p>
                                                }
                                                else if (pr.Incidencias)
                                                {
                                                    <p class="h3 text-justify text-danger ml-2">El prestador de servicios presentó incidencias de <strong>@pr.Valor</strong>, siendo acreedor a una penalización.</p>
                                                    <div class="col-lg-12 mt-3 ml-2">
                                                        <table class="table table-responsive-xl tablesIncidencias" id="tableIncidencias_@res.Pregunta">
                                                            <thead>
                                                                <tr>
                                                                    <th>ID</th>
                                                                    <th>Tipo</th>
                                                                    <th>Fecha Incidencia</th>
                                                                    <th>Comentarios</th>
                                                                </tr>
                                                            </thead>
                                                            <tbody>
                                                                @{ i = 0; }
                                                                @{ tp = 0; }
                                                                @foreach (var inc in Model.incidencias.analisis)
                                                                {
                                                                    @if (@pr.NoPregunta == inc.Pregunta)
                                                                    {
                                                                        i++;
                                                                        <tr>
                                                                            <td>@i</td>
                                                                            <td>@inc.Tipo</td>
                                                                            <td>@inc.FechaIncidencia.ToString("dd/MM/yyyy")</td>
                                                                            <td>@inc.Comentarios</td>
                                                                        </tr>
                                                                    }
                                                                }
                                                            </tbody>
                                                        </table>
                                                    </div>
                                                }
                                                else if (pr.Fechas)
                                                {
                                                    <p class="h3 text-justify text-danger">El servicio no se llevó a cabo en la fecha programada, siendo acreedor a una penalización.</p>
                                                    <br />
                                                    <p class="h4 text-danger">Fecha Programada: @Convert.ToDateTime(@res.Detalles.Split("|")[0]).ToString("dd/MM/yyyy")</p>
                                                    <p class="h4 text-danger">Fecha Realizada: @Convert.ToDateTime(@res.Detalles.Split("|")[1]).ToString("dd/MM/yyyy")</p>
                                                }
                                                else if (pr.Numero)
                                                {
                                                    <p class="h3 text-justify text-danger ml-2 mt-3">El prestador de servicios no cumplió con las "@pr.Valor", ya que solo tomó un total de @res.Detalles muestras.</p>
                                                }
                                                else
                                                {
                                                    <p class="h3 text-justify text-danger ml-2">El prestador de servicios no cumplió con el rubro @pr.Valor</p>
                                                }
                                            }
                                            else if (@res.Respuesta == true)
                                            {
                                                if (pr.Incidencias)
                                                {
                                                    <p class="h3 text-justify text-success ml-2 mt-3">El prestador de servicios no presentó incidencias en el mes evaluado.</p>
                                                }
                                                else if (pr.Fechas)
                                                {
                                                    <p class="h3 text-justify text-success ml-2 mt-3">El prestador de servicios llevó a cabo el servicio en la fecha programada.</p>
                                                }
                                                else if (pr.Numero)
                                                {
                                                    <p class="h3 text-justify text-success ml-2 mt-3">El prestador de servicios cumplió con el número de muestras en el mes evaluado.</p>
                                                }
                                                else
                                                {
                                                    <p class="h3 text-justify text-success ml-2 mt-3">El prestador de servicios cumplió con el rubro "@pr.Valor" en el mes evaluado.</p>
                                                }
                                            }
                                        </div>
                                    </div>
                                </div>
                            }
                        }
                    </div>
                }
            }
        </div>
                </div>
</div>

