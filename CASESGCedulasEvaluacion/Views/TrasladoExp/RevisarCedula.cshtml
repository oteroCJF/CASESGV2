@model CedulasEvaluacion.Entities.MCedula.CedulaEvaluacion;
@{
    //ViewData["Title"] = "Traslado y Maniobras de Expedientes - Folio: " + Model.Folio;

    <div class="titulo-principal">
        <b>
            Revisión de la Cédula del Servicio de Traslado y Maniobras de Expedientes
        </b> <i class="fa-sharp fa-solid fa-truck mr-2"></i>
    </div>
}

<div class="row align-items-center mb-4 border-bottom pb-3">
    <div class="col-lg-1 d-none d-lg-block text-center border-right pr-3">
        <i class="fas fa-file-signature fa-3x text-primary"></i>
    </div>
    <div class="col-lg-8 col-md-9">
        <h4 class="mb-1 text-dark">
            <span class="font-weight-bold display-5 text-decoration-underline" style="color: #24135f;">@Model.Folio</span> <br>
            <small class="d-block text-muted mt-2">
                <i class="fas fa-calendar-alt mr-2"></i> Evaluación correspondiente al mes de <b class="text-dark">@Model.Mes</b> del año <b class="text-dark">@Model.Anio</b>
            </small>
        </h4>
    </div>
    <div class="col-lg-3 col-md-3 text-right">
        <a href="/trasladoExp/index/@Model.ServicioId@Model.URL" type='button' class='btn btn-warning btn-lg shadow-sm' data-toggle="tooltip" title="Regresar al listado de cédulas" data-placement="top" style="padding: 3px 72px;">
            <i class="fas fa-arrow-left mr-2"></i> Regresar
        </a>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        <ul class="nav nav-tabs h6" id="myTab" role="tablist">
            <li class="nav-item" role="presentation">
                <a class="nav-link1 active" id="home-tab" data-toggle="tab" href="#informacion_general" role="tab" aria-controls="home" aria-selected="true">Información General</a>
            </li>
            <li class="nav-item" role="presentation">
                <a class="nav-link1" id="contact-tab" data-toggle="tab" href="#personal" role="tab" aria-controls="contact" aria-selected="false">Personal Requerido</a>
            </li>
            <li class="nav-item" role="presentation">
                <a class="nav-link1" id="contact-tab" data-toggle="tab" href="#uniforme" role="tab" aria-controls="contact" aria-selected="false">Uniforme</a>
            </li>
            <li class="nav-item" role="presentation">
                <a class="nav-link1" id="contact-tab" data-toggle="tab" href="#equipo" role="tab" aria-controls="contact" aria-selected="false">Maquinaria, Equipo y Material</a>
            </li>
            <li class="nav-item" role="presentation">
                <a class="nav-link1" id="contact-tab" data-toggle="tab" href="#entregables" role="tab" aria-controls="contact" aria-selected="false">Entregables</a>
            </li>
            <li class="nav-item" role="presentation">
                <a class="nav-link1" id="contact-tab" data-toggle="tab" href="#historial_cedula" role="tab" aria-controls="contact" aria-selected="false">Historial de la Cédula</a>
            </li>
        </ul>
        <div class="tab-content" id="myTabContent">
            <div class="tab-pane fade show active" id="informacion_general" role="tabpanel" aria-labelledby="home-tab">
                <div class="row justify-content-center align-items-center mt-4">
                    <div class="col-lg-12 h3 ml-4">
                        <h4 style="color: #24135f;">
                            <i class="fas fa-info-circle me-2"></i> <strong>Información General</strong>
                        </h4>

                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-12 mt-3">
                        <div class="card bg-light d-flex flex-fill">                         
                            <div class="card-body pt-0 mt-4">
                                <div class="row">
                                    <div class="col-7">
                                        <h5 class="mb-0 text-dark">
                                            <i class="fal fa-file-invoice mr-1"></i> <strong>Facturas Capturadas:</strong>
                                            <a href="#" id="btn_facturas" class='btn btn-lg btn-facturas ml-2 mb-1' data-toggle="tooltip" title="Ver Facturas" data-placement="top">
                                                <i class="fal fa-file-invoice"></i>
                                            </a>
                                        </h5>
                                        <ul class="ml-4 mb-0 fa-ul">
                                            <li class="strong mt-3"><span class="fa-li"><i class="fas fa-building me-2"></i></span> <h5><strong>Inmueble Evaluado: </strong> <span>@Model.inmuebles.Nombre</span></h5></li>
                                            <li class="strong mt-3"><span class="fa-li"><i class="fas fa-lg fa-dollar-sign"></i></span> <h5><strong>Facturación Total: </strong> @String.Format(System.Globalization.CultureInfo.CurrentCulture, "{0:C}", Model.TotalMontoFactura)</h5></li>
                                            <li class="strong mt-3"><span class="fa-li"><i class="fad fa-star"></i></span><h5><strong>Calificación: </strong> @Model.Calificacion</h5></li>
                                            <li class="strong mt-3"><span class="fa-li"><i class="fas fa-lg fa-user"></i></span> <h5><strong>Elaboró: </strong> @Model.usuarios.nombre_emp @Model.usuarios.paterno_emp @Model.usuarios.materno_emp</h5></li>
                                            <li class="strong mt-3">
                                                <span class="fa-li"><i class="fas fa-lg fa-envelope mb-1"></i></span>

                                                @if (@Model.usuarios.correo_electronico.Equals("") || @Model.usuarios.correo_electronico.Equals(null))
                                                {
                                                    <h5><strong>Correo:</strong><strong class="text-danger">@String.Format("Sin correo")</strong></h5>
                                                }
                                                else
                                                {
                                                    <h5><strong>Correo:</strong> @Model.usuarios.correo_electronico</h5>
                                                }

                                            </li>
                                        </ul>
                                    </div>
                                    <div class="col-lg-4">
                                        <h2 class="@(Model.Fondo.Replace("bg", "text")) lblEstatus">
                                            @Html.Raw(Model.Icono)
                                            <strong class="ml-2">Estatus: </strong> @Model.Estatus
                                        </h2>
                                        <p class="text-sm">
                                            @{decimal total = Convert.ToDecimal(@Model.RespuestasEncuesta[0].MontoPenalizacion + @Model.RespuestasEncuesta[1].MontoPenalizacion +
                                                                                                    @Model.RespuestasEncuesta[2].MontoPenalizacion);
                                            }
                                            @if (total > 0)
                                            {
                                                <h5 class="text-danger">
                                                    <b>Total Penalizable:</b> @String.Format(System.Globalization.CultureInfo.CurrentCulture, "{0:C}", total)
                                                </h5>
                                            }
                                            else
                                            {
                                                <h5 class="text-danger">
                                                    <b>No hay Monto Penalizable</b>
                                                </h5>
                                            }
                                        </p>
                                        <ul class="ml-4 mb-0 fa-ul">
                                            <li class="small mt-3"><span class="fa-li"><i class="fas fa-tools"></i></span> <b>Penalización en Personal Requerido: </b>@String.Format(System.Globalization.CultureInfo.CurrentCulture, "{0:C}", @Model.RespuestasEncuesta[0].MontoPenalizacion)</li>
                                            <li class="small mt-3"><span class="fa-li"><i class="fas fa-tools"></i></span> <b>Penalización en Material, Maquinaria y Equipo: </b>@String.Format(System.Globalization.CultureInfo.CurrentCulture, "{0:C}", @Model.RespuestasEncuesta[2].MontoPenalizacion)</li>
                                        </ul>
                                    </div>

                                </div>
                            </div>
                            @if (Model.Estatus.Equals("Enviado a DAS"))
                            {
                                <div class="card-footer">
                                    <div class="text-right">
                                        <button href="" class="btn btn-danger float-right mr-3 failed_cedula"><i class="fas fa-times mr-2"></i>Rechazar Cédula</button>
                                        <button href="" class="btn btn-success float-right mr-3 success_cedula"><i class="fas fa-check mr-2"></i>Aceptar Cédula</button>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
            <div class="tab-pane fade" id="personal" role="tabpanel" aria-labelledby="contact-tab">
                <div class="col-lg-12 h3 mt-4">
                    Personal Requerido
                </div>
                @if (@Model.RespuestasEncuesta[0].Respuesta == false)
                {
                    <div class="row mt-4">
                        <div class="row col-lg-12 mt-3">
                            <div class="col-lg-9 mt-3 ml-4">
                                <p class="h3 text-justify text-danger">No hubo suficiente personal para prestar el servicio por parte del prestador, siendo acreedor a una penalización.</p>
                            </div>
                            <div class="col-lg-2" style="margin-top: -18px;">
                                <div class="small-box bg-warning">
                                    <div class="icon">
                                        <i class="fas fa-times-circle text-danger"></i>
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-9 mt-3 ml-4">
                                <table class="table">
                                    <thead>
                                        <tr>
                                            <th>#</th>
                                            <th>Fecha de la Incidencia</th>
                                            <th>Personal Solicitado</th>
                                            <th>Personal Brindado</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @{ var i = 0;}
                                        @foreach (var inci in @Model.incidencias.traslado)
                                        {
                                            @if (@inci.Pregunta == @Model.RespuestasEncuesta[0].Pregunta)
                                            {
                                                i = i + 1;
                                                <tr>
                                                    <td>@i</td>
                                                    <td>@inci.FechaIncumplida.ToString("dd/MM/yyyy")</td>
                                                    <td>@inci.PersonalSolicitado</td>
                                                    <td>@inci.PersonalBrindado</td>
                                                </tr>
                                            }
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                    <div class="row mt-4">
                        <div class="col-lg-12">
                            <h5 class="text-danger ml-4">
                                <strong>Penalización: </strong> @String.Format(System.Globalization.CultureInfo.CurrentCulture, "{0:C}", @Model.RespuestasEncuesta[0].MontoPenalizacion)
                            </h5>
                        </div>
                    </div>
                }
                else
                {
                    <div class="row mt-4">
                        <div class="row col-lg-12 mt-3">
                            <div class="col-lg-9 mt-3 ml-4">
                                <p class="h3 text-justify text-success">El personal del prestador de servicios presentó suficiente personal, evitando una penalización.</p>
                            </div>
                            <div class="col-lg-2" style="margin-top: -18px;">
                                <div class="small-box bg-warning">
                                    <div class="icon">
                                        <i class="fas fa-check-circle text-success"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row mt-4">
                        <div class="col-lg-12">
                            <h5 class="text-success ml-4">
                                <strong>Penalización: </strong> @String.Format(System.Globalization.CultureInfo.CurrentCulture, "{0:C}", @Model.RespuestasEncuesta[0].MontoPenalizacion)
                            </h5>
                        </div>
                    </div>
                }
            </div>
            <div class="tab-pane fade" id="uniforme" role="tabpanel" aria-labelledby="profile-tab">
                <div class="col-lg-12 h3 mt-4">
                    Personal Uniformado
                </div>
                @if (@Model.RespuestasEncuesta[1].Respuesta == false)
                {
                    <div class="row mt-4">
                        <div class="row col-lg-12 mt-3">
                            <div class="col-lg-9 mt-3 ml-4">
                                <p class="h3 text-justify text-danger">El personal del prestador de servicios no se presento debidamente uniformado, siendo acreedor a una penalización.</p>
                            </div>
                            <div class="col-lg-2" style="margin-top: -18px;">
                                <div class="small-box bg-warning">
                                    <div class="icon">
                                        <i class="fas fa-times-circle text-danger"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row mt-4">
                        <div class="col-lg-12">
                            <h5 class="text-danger ml-4">
                                <strong>Penalización: </strong> @String.Format(System.Globalization.CultureInfo.CurrentCulture, "{0:C}", @Model.RespuestasEncuesta[1].MontoPenalizacion)
                            </h5>
                        </div>
                    </div>
                }
                else
                {
                    <div class="row mt-4">
                        <div class="row col-lg-12 mt-3">
                            <div class="col-lg-9 mt-3 ml-4">
                                <p class="h3 text-justify text-success">El personal del prestador de servicios se presentó debidamente uniformado, evitando una penalización.</p>
                            </div>
                            <div class="col-lg-2" style="margin-top: -18px;">
                                <div class="small-box bg-warning">
                                    <div class="icon">
                                        <i class="fas fa-check-circle text-success"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row mt-4">
                        <div class="col-lg-12">
                            <h5 class="text-success ml-4">
                                <strong>Penalización: </strong> @String.Format(System.Globalization.CultureInfo.CurrentCulture, "{0:C}", @Model.RespuestasEncuesta[1].MontoPenalizacion)
                            </h5>
                        </div>
                    </div>
                }
            </div>
            <div class="tab-pane fade" id="equipo" role="tabpanel" aria-labelledby="profile-tab">
                <div class="col-lg-12 h3 mt-4">
                    Maquinaria, Equipo y Material
                </div>
                @if (@Model.RespuestasEncuesta[2].Respuesta == false)
                {
                    <div class="row mt-4">
                        <div class="row col-lg-12 mt-3">
                            <div class="col-lg-9 mt-3 ml-4">
                                <p class="h3 text-justify text-danger">El personal del prestador de servicios no se presentó con el equipo de seguridad necesario, siendo acreedor a una penalización.</p>
                            </div>
                            <div class="col-lg-2" style="margin-top: -18px;">
                                <div class="small-box bg-warning">
                                    <div class="icon">
                                        <i class="fas fa-times-circle text-danger"></i>
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-9 mt-3 ml-4">
                                <table class="table">
                                    <thead>
                                        <tr>
                                            <th>#</th>
                                            <th>Fecha de la Incidencia</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @{ var i = 0;}
                                        @foreach (var inci in @Model.incidencias.traslado)
                                        {
                                            @if (@inci.Pregunta == @Model.RespuestasEncuesta[2].Pregunta)
                                            {
                                                i = i + 1;
                                                <tr>
                                                    <td>@i</td>
                                                    <td>@inci.FechaIncumplida.ToString("dd/MM/yyyy")</td>
                                                    <td>@inci.Comentarios.Replace("|", " ")</td>
                                                </tr>
                                            }
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                    <div class="row mt-4">
                        <div class="col-lg-12">
                            <h5 class="text-danger ml-4">
                                <strong>Días sin cumplír con el servicio: </strong> @Model.RespuestasEncuesta[2].Detalles <br /><br />
                                <strong>Penalización: </strong> @String.Format(System.Globalization.CultureInfo.CurrentCulture, "{0:C}", @Model.RespuestasEncuesta[2].MontoPenalizacion)
                            </h5>
                        </div>
                    </div>
                }
                else
                {
                    <div class="row mt-4">
                        <div class="row col-lg-12 mt-3">
                            <div class="col-lg-9 mt-3 ml-4">
                                <p class="h3 text-justify text-success">El personal del prestador de servicios se presentó con el equipo de seguridad necesario, evitando una penalización.</p>
                            </div>
                            <div class="col-lg-2" style="margin-top: -18px;">
                                <div class="small-box bg-warning">
                                    <div class="icon">
                                        <i class="fas fa-check-circle text-success"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row mt-4">
                        <div class="col-lg-12">
                            <h5 class="text-success ml-4">
                                <strong>Penalización: </strong> @String.Format(System.Globalization.CultureInfo.CurrentCulture, "{0:C}", @Model.RespuestasEncuesta[2].MontoPenalizacion)
                            </h5>
                        </div>
                    </div>
                }
            </div>
            <div class="tab-pane fade" id="entregables" role="tabpanel" aria-labelledby="contact-tab">
                <div class="col-lg-12 mt-3">
                    <ul class="nav nav-tabs h6" id="myTab" role="tablist">
                        <li class="nav-item" role="presentation">
                            <a class="nav-link active" id="home-tab" data-toggle="tab" href="#entregables_periodicos" role="tab" aria-controls="home" aria-selected="true">Entregables Períodicos</a>
                        </li>
                        <li class="nav-item" role="presentation">
                            <a class="nav-link" id="contact-tab" data-toggle="tab" href="#entregables_bd" role="tab" aria-controls="contact" aria-selected="false">Entregables Bajo Demanda</a>
                        </li>
                    </ul>
                    <div class="tab-content" id="myTabContent">
                        <div class="tab-pane fade show active" id="entregables_periodicos" role="tabpanel" aria-labelledby="home-tab">                           
                            <div class="row col-lg-12 mt-2 h6">
                                <div class="col-lg-12">
                                    <h3 class="mb-3 text-center text-primary font-weight-bold">
                                        <i class="fas fa-paperclip mr-2"></i> Entregables Periódicos Adjuntos
                                    </h3>                                    
                                    <table class="table table-hover table-striped table-bordered table-md" width="100%">
                                        <thead>
                                            <tr>
                                                <th class="text-center">Tipo</th>
                                                <th class="text-center">Nombre</th>
                                                <th class="text-center">Fecha de la Incidencia</th>
                                                <th class="text-center">Ver</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @{ string tipo = "";}
                                            @foreach (var entre in @Model.iEntregables)
                                            {
                                                <tr>
                                                    @if (entre.Tipo.Equals("CartaPorte"))
                                                    {
                                                        tipo = "Carta Porte";
                                                    }
                                                    else if (entre.Tipo.Equals("SAT"))
                                                    {
                                                        tipo = "Validación del SAT";
                                                    }
                                                    else if (entre.Tipo.Equals("NotaCredito"))
                                                    {
                                                        tipo = "Nota de Crédito";
                                                    }
                                                    else if (entre.Tipo.Trim().Equals("HojaEvidencia"))
                                                    {
                                                        tipo = "Hoja de Evidencia";
                                                    }
                                                    else
                                                    {
                                                        tipo = entre.Tipo;
                                                    }
                                                    <td class="text-center align-middle">@tipo</td>
                                                    <td>@entre.NombreArchivo</td>
                                                    <td class="text-center align-middle">@entre.FechaCreacion.ToString("dd/MM/yyyy")</td>
                                                    <td class="text-center align-middle">
                                                        <a href='#' class='text-center mr-2 view_file' data-id="@entre.Id" data-file="@entre.NombreArchivo" data-tipo="@entre.Tipo">
                                                            <i class='fas fa-eye text-success'></i>
                                                        </a>
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                        <div id="entregables_bd" class="tab-pane fade" role="tabpanel" aria-labelledby="home-tab">

                        </div>
                    </div>
                </div>
            </div>
            <div class="tab-pane fade" id="historial_cedula" role="tabpanel" aria-labelledby="contact-tab">
                <div class="row justify-content-center align-items-center mt-4">
                    <h3 class="mb-3 text-center text-primary font-weight-bold">
                        <i class="fas fa-history mr-2"></i> Seguimiento de la Cédula
                    </h3>
                    <div class="row col-lg-12">
                        <table class="table table-hover table-striped table-bordered table-sm" width="100%">
                            <thead>
                                <tr>
                                    <th>Servicio</th>
                                    <th>Usuario</th>
                                    <th>Comentarios</th>
                                    <th>Estatus</th>
                                    <th>Fecha de Actualización</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var hist in @Model.historialCedulas)
                                {
                                    <tr>
                                        <td>Traslado de Expedientes</td>
                                        <td>@hist.usuarios.nombre_emp @hist.usuarios.paterno_emp @hist.usuarios.materno_emp</td>
                                        <td>@hist.Comentarios</td>
                                        <td>@hist.Estatus</td>
                                        <td>@Convert.ToDateTime(@hist.FechaCreacion).ToString("dd/MM/yyyy hh:mm tt")</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

