@* Recibe el número de pregunta como un parámetro *@
@model int

<div class="row mt-4">
    <div class="col-lg-12">
        <div class="alert text-center py-2 mb-4" role="alert">
            <i class="fas fa-info-circle mr-2"></i> Incidencias registradas para la Pregunta @Model.
        </div>
        <div class="table-responsive">
            <table class="table table-hover table-striped table-bordered text-center" id="incidenciasDataTable_@Model">
                <thead class="bg-light text-secondary">
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Tipo</th>
                        <th scope="col">Fecha de Incidencia</th>
                        <th scope="col">Comentarios</th>
                        <th scope="col">Acciones</th>
                    </tr>
                </thead>
                <tbody id="tbl_incidencias_@Model">
                </tbody>
            </table>
        </div>
    </div>
</div>